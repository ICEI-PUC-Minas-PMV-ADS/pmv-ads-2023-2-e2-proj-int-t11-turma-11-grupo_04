            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary">Nome</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.NomeCobrador} {Model.SobrenomeCobrador}")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.Email}")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary">Telefone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.Telefone}")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary">CPF</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.CPF}")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary">Endereço</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.Endereco}")
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary"></h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.Bairro}")
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary"></h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{Model.Cidade}{" - "}{Model.UF}")
                            </div>
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-primary"></h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @($"{"CEP: "}{Model.CEP}")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <button type="button" class="btn btn-info" style="width:100%" data-toggle="modal" data-target="#myModal">Editar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Project Status</h6>
                                <small>Web Design</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Website Markup</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>One Page</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Mobile Template</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Backend API</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Project Status</h6>
                                <small>Web Design</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Website Markup</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>One Page</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Mobile Template</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Backend API</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">


            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            <div class="modal-body">
                <h2 class="modal-title" id="exampleModalLabel">Editar perfil</h2><br>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="NomeCobrador" class="form-control" placeholder="Nome completo" />
                        <span asp-validation-for="NomeCobrador" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="SobrenomeCobrador" class="form-control" placeholder="Nome completo" />
                        <span asp-validation-for="SobrenomeCobrador" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CPF" class="form-control" id="cpfInput" placeholder="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Telefone" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Endereco" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Bairro" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Cidade" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UF" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CEP" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha" class="form-control" placeholder="Senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>



