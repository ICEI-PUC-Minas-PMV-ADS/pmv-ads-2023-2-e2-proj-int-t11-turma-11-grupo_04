@model Projeto_Eixo_2.Models.Cobrador

@{
    ViewData["Title"] = "Create";
}

<div class="row h-100 pb-3">
    <div class="col-md-4 my-auto">
        <h1 class="text-center font-weight-bold text-white">Otimize suas cobranças</h1>
        <img src="~/src/imagem_login.svg" />
    </div>
    <div class="card p-5 col-md-8" style="background-color: white; height: 100vh; border-radius: 20px">
        <div class="my-auto" id="margem">
            <div class="col-md-10 mx-auto my-auto">
                <h2>Crie sua conta grátis!</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="NomeCobrador" class="form-control" placeholder="Nome"/>
                        <span asp-validation-for="NomeCobrador" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="SobrenomeCobrador" class="form-control" placeholder="Sobrenome"/>
                        <span asp-validation-for="SobrenomeCobrador" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CPF" class="form-control" placeholder="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="CEP" class="form-control" placeholder="CEP" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Endereco" class="form-control" placeholder="Endereço" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Bairro" class="form-control" placeholder="Bairro" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UF" class="form-control" placeholder="Estado" />
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Telefone" class="form-control" placeholder="Telefone" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha" class="form-control" placeholder="Senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Perfil" class="control-label"></label>
                        <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                        <span asp-validation-for="Perfil" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar conta" class="btn btn-info btn-lg" style="width: 100%" />
                    </div>
                    <h7 class="text-black-50">Já possui uma conta?<a asp-area="" asp-controller="Cobradores" asp-action="Login">Entrar</a></h7>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
    }

    body {
        background-color: #51C8BC;
    }
    /*#margem{
            margin: 80px, auto;
            padding: 5em;
        }
        */

</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
