@model Projeto_Eixo_2.Models.Cobrador

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-4" style="background-color: #51C8BC; height: 100%">
        <h1 class="text-center font-weight-bold text-white">Otimize suas cobranças</h1>
        <img src="~/src/imagem_login.svg" />
    </div>
    <div class="col-md-8 my-auto">
        <div class ="col-md-10 mx-auto my-auto">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control mx-auto" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control mx-auto" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Acessar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
