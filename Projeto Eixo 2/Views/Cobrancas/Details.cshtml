@model Projeto_Eixo_2.Models.Cobranca

@{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    ViewData["Title"] = "Teste";
}
<head>
    <title>Teste</title>
</head>

<h1>Details</h1>

<div>
    <h4>Cobranca</h4>
    <hr />
    <dl class="row" id="testePDF">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vencimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vencimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cobrador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cobrador.NomeCobrador)
        </dd>
    </dl>
</div>
<button onclick="gerarPDF()">Gerar PDF</button>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<style>
    body {
        background-color: #1090CB1A;
    }
</style>

<script>
    function gerarPDF() {
        const elemento = document.body;

        html2pdf()
            .from(elemento)
            .save('arquivo.pdf');
    }
</script>