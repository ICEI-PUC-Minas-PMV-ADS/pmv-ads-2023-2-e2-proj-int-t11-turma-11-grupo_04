@using System.Security.Claims;
@model Projeto_Eixo_2.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de cliente</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCliente" class="control-label"></label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SobrenomeCliente" class="control-label"></label>
                <input asp-for="SobrenomeCliente" class="form-control" />
                <span asp-validation-for="SobrenomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPFCliente" class="control-label"></label>
                <input asp-for="CPFCliente" class="form-control" />
                <span asp-validation-for="CPFCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneCliente" class="control-label"></label>
                <input asp-for="TelefoneCliente" class="form-control" />
                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="CobradorId" class ="form-control" asp-items="ViewBag.CobradorId" hidden></select>
                <input id="teste" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" hidden/>



            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
                <input type="button" value="Descartar" class="btn btn-outline-secondary" onclick="window.history.back();" />
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Obtenha o valor do CPFCliente
        var cpfClienteValue = document.getElementById("teste").value;

        // Defina o valor do CobradorId no SelectList
        document.getElementById("CobradorId").value = cpfClienteValue;
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
